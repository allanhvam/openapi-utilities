{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "sourceMap": true,
        "removeComments": false,
        "types": [
            "node"
        ],
        "lib": [
            "ESNext",
            "DOM"
        ],
        "noImplicitAny": false,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "pretty": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "outDir": "lib",
        "allowSyntheticDefaultImports": true,
        "strict": true
    },
    "include": [
        "./src/**/*.ts"
    ]
}